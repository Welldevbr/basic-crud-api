{
  "openapi": "3.0.0",
  "info": {
    "title": "Basic Rest API",
    "author": "Well dev",
    "description": "A simple REST API built with Express.js",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "API de teste"
    }
  ],
  "paths": {
    "/users/create": {
      "post": {
        "summary": "Cadastro de um novo usuário",
        "description": "Está rota permite cadastrar um novo usuário com as propriedades nome e idade",
        "tags": [
          "Users"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "example": {
                "name": "João",
                "age": 30
              }
            }
          }
        },
        "responses": {
          "401": {
            "description": "Unauthorized"
          },
          "400": {
            "description": "Dados inválidos"
          },
          "409": {
            "description": "Usuário já cadastrado"
          },
          "200": {
            "description": "Usuário criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/users/list": {
      "get": {
        "summary": "Listagem de usuários e filtro por nome",
        "description": "Esta rota retorna uma lista de todos os usuários cadastrados, com a opção de filtrar por nome",
        "tags": [
          "Users"
        ],
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "Nome do usuário para filtrar a lista",
            "required": false
          }
        ],
        "responses": {
          "404": {
            "description": "Nenhum usuário não encontrado"
          },
          "200": {
            "description": "Lista de usuários",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/users/details/{id}": {
      "get": {
        "summary": "Busca um usuário pelo seu ID",
        "description": "Esta rota retorna apenas um usuário cadastrado",
        "tags": [
          "Users"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID do usuário a ser buscado"
          }
        ],
        "responses": {
          "404": {
            "description": "Nenhum usuário não encontrado"
          },
          "200": {
            "description": "Dados do usuário",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/users/update/{id}": {
      "put": {
        "summary": "Atualizar dados de um usuário cadastrado",
        "description": "Esta rota atualiza os dados de um usuário cadastrado",
        "tags": [
          "Users"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID do usuário a ser editado"
          }
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "404": {
            "description": "Nenhum usuário não encontrado"
          },
          "200": {
            "description": "Lista dados de um usuário",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/users/delete/{id}": {
      "delete": {
        "summary": "Deletar um usuário",
        "description": "Esta rota remove apenas um usuário cadastrado.",
        "tags": [
          "Users"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID do usuário a ser deletado"
          }
        ],
        "responses": {
          "404": {
            "description": "Nenhum usuário não encontrado"
          },
          "200": {
            "description": "Usuário removido com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "age": {
            "type": "integer"
          }
        },
        "required": [
          "id",
          "name",
          "age"
        ]
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}